<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_on_main_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/chickenStoreName"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="네네치킨"
            android:layout_weight="0.94" />

        <TextView
            android:id="@+id/chickenStoreMinPrice"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="가격 : 8500 ~"
            android:layout_weight="0.94" />

        <TextView
            android:id="@+id/chickenStoreDeliveryFee"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="배달비 : 1500원"
            android:layout_weight="0.94" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_on_main_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/chicken1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
