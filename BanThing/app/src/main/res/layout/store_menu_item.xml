<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/store_detail_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="6dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="메뉴 가격"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/store_detail_menu_price"
            android:layout_below="@+id/store_detail_menu_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="160dp"
            app:srcCompat="@drawable/chicken3"
            android:id="@+id/store_detail_menu_picture"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="메뉴 이름"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/store_detail_menu_name"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="false"
            android:gravity="center_horizontal"
            android:layout_below="@+id/store_detail_menu_picture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
